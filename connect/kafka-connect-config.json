{
  "name": "timescaledb-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "smart-home-measurements",
    "connection.url": "jdbc:postgresql://timescaledb:5432/sensordb",
    "connection.user": "sensor",
    "connection.password": "sensor",
    "auto.create": "false",
    "auto.evolve": "false",
    "insert.mode": "insert",
    "table.name.format": "measurements",
    "pk.mode": "none",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",
    "transforms": "convertTimestamp",
    "transforms.convertTimestamp.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertTimestamp.field": "time",
    "transforms.convertTimestamp.target.type": "Timestamp",
    "transforms.convertTimestamp.format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
  }
}